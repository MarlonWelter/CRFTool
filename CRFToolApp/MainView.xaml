            </Button>
            <Button Name="button2" Click="button2_Click" Height="80" Width="80" Margin="20, 10" Background="Transparent">
                <Image Source="icons/info.png"></Image>
            </Button>
            <Button Name="button3" Click="button3_Click" Height="80" Width="80" Margin="20, 10" Background="Transparent">
                <Image Source="icons/action.png"></Image>
            </Button>
            <Button Name="button4" Click="button4_Click" Height="80" Width="80" Margin="20, 10" Background="Transparent">
                <Image Source="icons/defense.png"></Image>
            </Button>
        </StackPanel>
        <DockPanel
