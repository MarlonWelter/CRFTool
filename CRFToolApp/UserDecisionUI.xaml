<Window x:Class="CRFToolApp.UserDecisionUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRFToolApp"
             mc:Ignorable="d" 
             Title="UserChoiceWindow" Height="100" Width="250">
    <StackPanel Name="mainPanel" Orientation="Vertical" >
        <ComboBox Name="listBox" ItemsSource="{ Binding Path=Options, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="30"/>
        <Button Click="Button_Click" Content="Continue" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="30"/>
    </StackPanel>
</Window>
