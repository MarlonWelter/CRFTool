<UserControl x:Class="CRFToolApp.Workflow_I_1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRFToolApp"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Click="UseTrainingData_Click" Name="UseTrainingData" Grid.Column="0" Content="Use Training Data" Background="Beige" FontSize="18
                " HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
        <Button Click="LoadTrainingResult_Click" Name="LoadTrainingResult" Grid.Column="1" Content="Load Training Result" Background="LightSteelBlue"  FontSize="18" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
